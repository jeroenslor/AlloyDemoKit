@model ButtonBlock

<a class="btn-blue" title="@Model.ButtonText" href="@Url.ContentUrl(Model.ButtonLink)" @Html.EditAttributes(m => m.ButtonText)>
    @{
        var buttonText = string.IsNullOrWhiteSpace(Model.ButtonText) 
            ? Html.Translate("/alloy/blocks/buttonblockcontrol/buttondefaulttext") 
            : Model.ButtonText;
    }
    @buttonText
</a>
